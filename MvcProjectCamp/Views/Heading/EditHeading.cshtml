@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Heading Editing Page</h2>
@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x=>x.HeadingID, new {@class="form-control"})
        <br />
        @Html.Label("Heading Name")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        <br />
        @Html.Label("Date")
        @Html.TextBoxFor(x=>x.HeadingDate, new {@class="form-control"})
        <br />
        @Html.Label("Author ID")
        @Html.TextBoxFor(x => x.AuthorID, new { @class ="form-control"})
        @Html.Label("Author Mail")
        @Html.TextBoxFor(x=>x.Author.AuthorEmail, new {@class="form-control", @readonly="readonly"})
        <br />
        @Html.Label("Category")
        @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.vlc, new {@class="form-control"})
        <br />
        <button class="btn btn-success">Update</button>
    </div>
}