@using EntityLayer.Concrete
@model List<Message>

@using (Html.BeginForm("NewMessage", "Home", FormMethod.Post))
{
    <div class="row contact_left_grid">
        <div class="col-md-6 con-left" data-aos="fade-up">
            <div class="form-group">
                @Html.Label("Sender mail")
                @Html.TextBoxFor(x => x.SenderMail, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SenderMail)
            </div>

            <div class="form-group">

                @Html.Label("Subject")
                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Subject)
            </div>
        </div>
        <div class="col-md-6 con-right" data-aos="fade-up">
            @Html.Label("Message")
            <textarea id="compose-textarea" name="MessageContent" class="form-control" style="height: 300px"></textarea>
        </div>
        <div class="sub-honey mx-auto mt-3">
            <input class="form-control" type="submit" value="Send">
        </div>
    </div>
}
