@using EntityLayer.Concrete
@model List<Message>
<div class="col-md-3">
    <a href="/Message/NewMessage/" class="btn btn-primary btn-block mb-3">Compose</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Options</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                
                <li class="nav-item active">
                    <a href="/Message/Inbox/" class="nav-link">
                        <i class="fas fa-inbox"></i> Inbox
                        @if (ViewBag.unreadCount != 0)
                        {<span class="badge bg-primary float-right">@ViewBag.unreadCount</span>}

                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/Sendbox/" class="nav-link">
                        <i class="far fa-envelope"></i> Sent
                        <span class="badge bg-primary float-right">@ViewBag.sentCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/DraftMessages/" class="nav-link">
                        <i class="far fa-file-alt"></i> Drafts
                        <span class="badge bg-primary float-right">@ViewBag.draftCount</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/Message/TrashBin/" class="nav-link">
                        <i class="far fa-trash-alt"></i> Trash bin
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <!-- /.card -->
</div>