@model EntityLayer.Concrete.Author
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Register</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-20/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
          
            <div class="row justify-content-center">
              
                <div class="login-wrap p-0">
                    <a href="/Login/AuthorLogin/"><h3 class="mb-4 text-center">Have an account?</h3></a>
                    @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div class="form form-group">
                            <div class="container">
                                <div class="row">
                                    <div class="col-6">
                                        @Html.Label("Author name")
                                        @Html.TextBoxFor(x => x.AuthorFirstName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.AuthorFirstName)
                                        <br />
                                        @Html.Label("Author lastname")
                                        @Html.TextBoxFor(x => x.AuthorLastName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.AuthorLastName)
                                        <br />
                                        @Html.Label("Author Email")
                                        @Html.TextBoxFor(x => x.AuthorEmail, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.AuthorEmail)
                                        <span style="color:red">@ViewBag.errorMessage</span>
                                        <br />
                                        @Html.Label("Author Image")
                                        @Html.TextBoxFor(x => x.AuthorImage, new { @class = "form-control", type = "file" })
                                        <br />
                                    </div>
                                    <div class="col-6">
                                        @Html.Label("Author Password")
                                        @Html.TextBoxFor(x => x.AuthorPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.AuthorPassword)
                                        <br />
                                        @Html.Label("Author Title")
                                        @Html.TextBoxFor(x => x.AuthorTitle, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.AuthorTitle)
                                        <br />
                                        @Html.Label("Author About")
                                        @Html.TextAreaFor(x => x.AuhtorAbout, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.AuhtorAbout)
                                        <br />
                                    </div>
                                </div>

                            </div>



                        </div>
                        <input class="btn btn-info" type="submit" value="Add Author">
                    }

                </div>
                </div>
            </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-20/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/main.js"></script>

</body>
</html>

